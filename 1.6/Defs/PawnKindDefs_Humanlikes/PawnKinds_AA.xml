<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<PawnKindDef Name="Ogam_MagicalAcademyPawnBase" Abstract="True">
		<race>Human</race>
		<defaultFactionType>Ogam_MagicalAcademy</defaultFactionType>
		<backstoryCategories>
			<li>Tribal</li>
		</backstoryCategories>
		<minGenerationAge>18</minGenerationAge>
		<maxGenerationAge>85</maxGenerationAge>
		<chemicalAddictionChance>0.03</chemicalAddictionChance>
		<invNutrition>10</invNutrition>
		<invFoodDef>DankPyon_MealBread</invFoodDef>
		<isFighter>true</isFighter>
		<techHediffsRequired>
			<li>DeathAcidifier</li>
		</techHediffsRequired>
		<initialWillRange>5~10</initialWillRange>
		<initialResistanceRange>8~10</initialResistanceRange>
		<apparelIgnoreSeasons>true</apparelIgnoreSeasons>
		<disallowedTraits>
			<li>Wimp</li>
			<li>Pyromaniac</li>
			<li>Nudist</li>
		</disallowedTraits>   
		<requiredWorkTags>
			<li>Violent</li>
		</requiredWorkTags>
		<weaponMoney>3000</weaponMoney>
		<itemQuality>Good</itemQuality>
		<gearHealthRange>0.2~1.1</gearHealthRange>	
		<apparelRequired>	
			<li>Dankpyon_Apparel_Gambeson</li> <!-- OnSkin (neck, torso, shoulders) -->
			<li>DankPyon_Apparel_Leather_Tunic</li>	<!-- Middle (neck, torso, shoulders) -->
			<li>DankPyon_Apparel_Trousers</li> <!-- Middle (legs) -->
			<li>DankPyon_Handwear_GlovesLeather</li> <!-- Middle (hands) -->
			<li>DankPyon_Footwear_BootsLeather</li> <!-- Middle (feet) -->
		</apparelRequired>
  	</PawnKindDef>


  <!-- ========== Magical Academy ========== -->

	<!-- Tier 0: Arcane Prospector (worker) -->
	<PawnKindDef>
		<defName>Ogam_MA_Prospector</defName>
		<label>arcane prospector</label>
		<race>Human</race>
		<defaultFactionType>Ogam_MagicalAcademy</defaultFactionType>
		<backstoryCategories>
			<li>Tribal</li>
		</backstoryCategories>
		<minGenerationAge>18</minGenerationAge>
		<maxGenerationAge>85</maxGenerationAge>
		<chemicalAddictionChance>0.03</chemicalAddictionChance>
		<inventoryOptions>
			<subOptionsTakeAll>
				<li>
					<thingDef>DankPyon_MealBread</thingDef>
					<countRange>3</countRange>
				</li>
				<li>
					<thingDef>DankPyon_Weapon_PotFire</thingDef>
					<countRange>1</countRange>
				</li>
				<li>
					<thingDef>DankPyon_Clay</thingDef>
					<countRange>5</countRange>
				</li>
				<li>
					<thingDef>DankPyon_Coal</thingDef>
					<countRange>5</countRange>
				</li>				
			</subOptionsTakeAll>
			<subOptionsChooseOne>
				<li>
					<thingDef>DankPyon_Citrine</thingDef>
					<countRange>5</countRange>
				</li>
				<li>
					<thingDef>DankPyon_Amber</thingDef>
					<countRange>5</countRange>
				</li>
				<li>
					<thingDef>DankPyon_Onyx</thingDef>
					<countRange>5</countRange>
				</li>
				<li>
					<thingDef>DankPyon_Emerald</thingDef>
					<countRange>5</countRange>
				</li>
				<li>
					<thingDef>DankPyon_SilverOre</thingDef>
					<countRange>5</countRange>
				</li>
				<li>
					<thingDef>DankPyon_GoldOre</thingDef>
					<countRange>5</countRange>
				</li>
			</subOptionsChooseOne>						
		</inventoryOptions>
		<isFighter>false</isFighter>
		<initialWillRange>5~10</initialWillRange>
		<initialResistanceRange>8~10</initialResistanceRange>
		<apparelIgnoreSeasons>true</apparelIgnoreSeasons>
		<disallowedTraits>
			<li>Wimp</li>
			<li>Pyromaniac</li>
			<li>Nudist</li>
		</disallowedTraits>   
		<requiredWorkTags>
			<li>Violent</li>
		</requiredWorkTags>
		<weaponMoney>3000</weaponMoney>
		<itemQuality>Good</itemQuality>
		<gearHealthRange>0.2~1.1</gearHealthRange>	
		<apparelRequired>	
			<li>DankPyon_Apparel_Leather_Tunic</li>
			<li>DankPyon_Apparel_Trousers</li>
			<li>DankPyon_Handwear_GlovesLeather</li>
			<li>DankPyon_Footwear_BootsLeather</li>
			<li>Apparel_Cape</li>
			<li>Apparel_HatHood</li>
		</apparelRequired>		
		<specificApparelRequirements>
				   <li>
					   <bodyPartGroup>Torso</bodyPartGroup>
					   <apparelLayer>Shell</apparelLayer>
					   <requiredTag>Cape</requiredTag>
					   <colorGenerator Class="ColorGenerator_Options">
						   <options>
							   <li>
								   <only>(30, 30, 32)</only>
							   </li>
						   </options>
					   </colorGenerator>
				   </li>
				   <li>
					   <bodyPartGroup>UpperHead</bodyPartGroup>
					   <apparelLayer>Overhead</apparelLayer>
					   <requiredTag>BestowerHood</requiredTag>
					   <colorGenerator Class="ColorGenerator_Options">
						   <options>
							   <li>
								   <only>(30, 30, 32)</only>
							   </li>
						   </options>
					   </colorGenerator>
				   </li>
   		 </specificApparelRequirements>
		<combatPower>20</combatPower>
		<weaponTags>
			<li>DankPyon_Pickaxe</li>
		</weaponTags>
		<skills>
			<li>
				<skill>Mining</skill>
				<range>6~10</range>
			</li>
			<li>
				<skill>Construction</skill>
				<range>4~8</range>
			</li>
			<li>
				<skill>Intellectual</skill>
				<range>3~7</range>
			</li>
		</skills>		
	</PawnKindDef>

